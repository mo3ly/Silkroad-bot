    <Style TargetType="ToolTip">
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="HasDropShadow" Value="True" />
        <Setter Property="FontFamily" Value="Tahoma" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="Placement" Value="Right" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Border BorderBrush="#000000" BorderThickness="1" CornerRadius="3">
                        <Border BorderBrush="#6b84ce" BorderThickness="1" CornerRadius="3">
                            <Border BorderBrush="#000821" BorderThickness="1" CornerRadius="3">
                                <Border Background="#BF192142" BorderBrush="#E5081031" BorderThickness="2" CornerRadius="3" Padding="3">
                                    <ContentPresenter />
                                </Border>
                            </Border>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
